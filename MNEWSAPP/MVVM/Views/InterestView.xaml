                    Margin="5,0,0,0"
                    BackgroundColor="Black"
                    CornerRadius="10"
                    HeightRequest="3"
                    VerticalOptions="Center"
                    WidthRequest="10"
                    Color="Black" />
            </HorizontalStackLayout>

            <Button
                Margin="15"
                BackgroundColor="Black"
                CornerRadius="15"
                FontFamily="mnewsbold"
                Text="save"
                TextColor="White"
                WidthRequest="250" />
