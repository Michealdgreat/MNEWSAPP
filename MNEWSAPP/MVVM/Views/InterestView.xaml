<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MNEWSAPP.MVVM.Views.InterestView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="InterestView"
    Padding="20">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                Margin="0,40,0,0"
                CharacterSpacing="2"
                FontFamily="poppinsblack"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Pick your interests" />
            <Label
                Margin="20,10,0,0"
                FontFamily="poppinssemibold"
                FontSize="Default"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="We’ll use this info to personalize your feed to recommend things you’ll like." />


            <!--#region INTERESTS-->
            <toolkit:UniformItemsLayout Margin="0,10,0,0" MaxColumns="2">

                <!--#region Frame 1-->
                <Frame Style="{StaticResource FrameStyles}">
                    <Grid>
                        <Frame
                            Padding="0"
                            BorderColor="White"
                            CornerRadius="10">
                            <Image Aspect="AspectFill" Source="football" />
                        </Frame>

                        <BoxView Style="{StaticResource FrameBox}" />

                        <RadioButton
                            BorderColor="White"
                            HorizontalOptions="End"
                            TextColor="Yellow" />

                    </Grid>
                </Frame>
                <!--#endregion-->

                <!--#region Frame 1-->
                <Frame
                   Style="{StaticResource FrameStyles}">
                    <Grid>
                        <Frame
