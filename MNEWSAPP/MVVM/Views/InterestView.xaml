            </toolkit:UniformItemsLayout>

            <Label
                Margin="0,15,0,0"
                FontFamily="mnewsbold"
                FontSize="Small"
                HorizontalOptions="Center"
                Text="view all" />

            <HorizontalStackLayout Margin="0,40,0,0" HorizontalOptions="Center">
                <BoxView
                    BackgroundColor="Black"
                    CornerRadius="10"
                    HeightRequest="3"
                    VerticalOptions="Center"
                    WidthRequest="10"
                    Color="Black" />
                <BoxView
                    Margin="4,0,0,0"
                    BackgroundColor="Black"
                    CornerRadius="10"
                    HeightRequest="3"
                    VerticalOptions="Center"
                    WidthRequest="60"
                    Color="Black" />
