                    </Grid>
                </Frame>
                <!--#endregion-->

                <!--#region Frame 1-->
                <Frame
Style="{StaticResource FrameStyles}">
                    <Grid>
                        <Frame
                            Padding="0"
                            BorderColor="White"
                            CornerRadius="10">
                            <Image Aspect="AspectFill" Source="houseinvillage" />
                        </Frame>

                        <BoxView
                            Style="{StaticResource FrameBox}"/>

                        <RadioButton
                            BorderColor="White"
                            HorizontalOptions="End"
                            TextColor="Yellow" />

                    </Grid>
                </Frame>
                <!--#endregion-->

                <!--#region Frame 1-->
