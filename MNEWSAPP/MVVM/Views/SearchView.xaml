<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MNEWSAPP.MVVM.Views.SearchView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SearchView"
    Padding="40">

    <VerticalStackLayout Margin="0,30,0,0">
        <Entry
            x:Name="SearchKeyword"
            Margin="0,0,0,40"
            ClearButtonVisibility="WhileEditing"
            
            Placeholder="Search MNews Articles"
            PlaceholderColor="Black" />
        <Button
            BackgroundColor="Black"
            FontFamily="mnewsbold"
            FontSize="Body"
            Clicked="SearchButtonClicked"
            CornerRadius="30"
            Text="Search" />
    </VerticalStackLayout>
</ContentPage>