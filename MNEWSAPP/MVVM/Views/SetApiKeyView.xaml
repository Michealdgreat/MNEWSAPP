<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MNEWSAPP.MVVM.Views.SetApiKeyView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SetApiKeyView"
    Padding="30">
    <VerticalStackLayout VerticalOptions="Center">
        <Label
            Margin="0,-30,0,50"
            FontAttributes="Bold"
            FontFamily="mnewsbold"
            FontSize="Body"
            HorizontalOptions="Center"
            Text="Paste your newsapi.org API Key Below"
            VerticalOptions="Center" />
        <Entry x:Name="ApiKeyEntry" Placeholder="Paste your news api key here" TextColor="Black" FontSize="16" />
        <Button
            Margin="0,20,0,0"
            BackgroundColor="{AppThemeBinding Dark='White', Light='Black'}"
            CornerRadius="10"
            Text="Continue"
            WidthRequest="200" 
            Clicked="SetApiKeyButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>