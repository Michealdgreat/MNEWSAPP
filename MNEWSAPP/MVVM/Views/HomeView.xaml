<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MNEWSAPP.MVVM.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomeView"
    BackgroundColor="#101214">
    <Grid Margin="25" RowDefinitions=".06*, .1*, .44*, .2*, .2*">
        <!--#region Top Region-->
        <Grid Margin="0,0,15,0" ColumnDefinitions="*,*">
            <Label
                FontFamily="mnewslogo"
                FontSize="20"
                HorizontalOptions="Start"
                Text="MNEWS"
                TextColor="White"
                TextDecorations="Underline"
                VerticalOptions="Start" />

            <Image
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Start">
                <Image.Source>
                    <FontImageSource
                        FontFamily="mnewsicons"
                        Glyph="&#x0041;"
                        Size="27"
                        Color="White" />
                </Image.Source>
            </Image>
        </Grid>
        <!--#endregion-->
        <!--#region Featured Section-->
        <Grid Grid.Row="2" RowDefinitions=".2*,.07*,.7*,.3*">

            <Label
                FontSize="18"
                Text="Making the most of outdoor space for a beautiful and bounful vegetable"
                Margin="0,0,0,0"
                TextColor="White" />

            <HorizontalStackLayout Grid.Row="1" VerticalOptions="Start" Margin="0,0,0,0" BackgroundColor="DarkSlateGray">
                <Label Text="Nature Channel" FontSize="12"/>
                <Label Text="." TextColor="White" FontSize="20"/>
                <Label Text="30 mins ago" FontSize="12"/>
            </HorizontalStackLayout>

        </Grid>
        <!--#endregion-->

    </Grid>
</ContentPage>