<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MNEWSAPP.MVVM.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomeView"
    BackgroundColor="#FFF">
    <ScrollView>
        <VerticalStackLayout Background="White">
            <!--#region FEATURED SECTION-->
            <Frame
                Padding="10,5,10,5"
                BackgroundColor="#F9F9F9"
                BorderColor="#F9F9F9">
                <Grid
                    Margin="5"
                    ColumnDefinitions=".7*,.3*"
                    RowDefinitions=".2*, .1*, .4*, .4*, .1*"
                    RowSpacing="7">
                    <Label
                        Grid.ColumnSpan="2"
                        FontFamily="headlinefont"
                        FontSize="Header"
                        HorizontalOptions="Start"
                        Text="Making the most of outdoor space or a beautiful and Bountiful Vegetable Garden"
                        TextColor="#000"
                        VerticalOptions="Start" />
                    <HorizontalStackLayout
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalOptions="Start">
                        <Label
                            FontFamily="headlinefont"
                            FontSize="Micro"
                            Text="Nature Channel" />
                        <Label
                            FontFamily="headlinefont"
                            FontSize="Micro"
                            Text="-" />
                        <Label
                            FontFamily="headlinefont"
                            FontSize="Micro"
                            Text="6mins ago" />
                    </HorizontalStackLayout>
                    <Frame
                        Grid.Row="2"
                        Grid.RowSpan="2"
                        Padding="0"
                        IsClippedToBounds="True">
                        <Image Aspect="Fill" Source="tropical.jpg" />
                    </Frame>
                    <Frame
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="2,0,0,0"
                        Padding="0">
                        <Image Aspect="Fill" Source="tropical" />
                    </Frame>

                    <Frame
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="2,0,0,0"
                        Padding="0">
                        <Image Aspect="Fill" Source="tropical" />

                    </Frame>

                    <Label
                        Grid.Row="4"
                        FontSize="Micro"
                        Text="*00 201 122" />
                </Grid>

            </Frame>
            <!--#endregion-->

            <Label Text="Popular Redaction" />
        </VerticalStackLayout>


    </ScrollView>

</ContentPage>