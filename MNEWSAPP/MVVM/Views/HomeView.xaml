<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MNEWSAPP.MVVM.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomeView"
    BackgroundColor="#101214">
    <Grid Margin="25" RowDefinitions=".06*, .1*, .44*, .2*, .2*">
        <Grid
            Margin="0,0,15,0"
      
            ColumnDefinitions="*,*">

            <Label
                FontFamily="mnewslogo"
                FontSize="20"
                HorizontalOptions="Start"
                Text="MNEWS"
                TextColor="White"
                VerticalOptions="Start" />
            <Image
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Start">
                <Image.Source>
                    <FontImageSource
                        FontFamily="mnewsicons"
                        Glyph="&#x0041;"
                        Size="27"
                        Color="White" />

                </Image.Source>
            </Image>


        </Grid>
    </Grid>
</ContentPage>